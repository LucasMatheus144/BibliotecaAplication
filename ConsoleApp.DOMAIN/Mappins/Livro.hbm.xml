<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
	xmlns="urn:nhibernate-mapping-2.2"
	namespace="ConsoleApp.DOMAIN.Entites"
	assembly="ConsoleApp.DOMAIN">

	<class name="Livro" table="livros">
		<id name="Id" column="id">
			<generator class="sequence">
				<param name="sequence">livros_seq</param>
			</generator>
		</id>

		<property name="Nome" column="nome" not-null="true" length="30" unique="true" />

		<property name="Descricao" column="descricao" length="50" />

		<property name="Status" column="situaca" not-null="true" />

	</class>

</hibernate-mapping>